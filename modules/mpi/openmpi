#%Module1.0
proc ModulesHelp { } {
    puts stderr "Loads OpenMPI from /usr/lib64/openmpi."
}
module-whatis "OpenMPI (system package)"

conflict mpi

set root /usr/lib64/openmpi
prepend-path PATH $root/bin
prepend-path LD_LIBRARY_PATH $root/lib
prepend-path MANPATH $root/share/man

setenv MPI_HOME $root
setenv MPI_BIN $root/bin
setenv HPC_MPI_ACTIVE openmpi
