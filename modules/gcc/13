#%Module1.0
proc ModulesHelp { } {
    puts stderr "Loads GCC 13 (gcc-toolset-13)."
}
module-whatis "GCC 13 toolchain (gcc-toolset-13)"

conflict gcc

set root /opt/rh/gcc-toolset-13/root
prepend-path PATH $root/usr/bin
prepend-path LD_LIBRARY_PATH $root/usr/lib64
prepend-path MANPATH $root/usr/share/man

setenv CC gcc
setenv CXX g++
setenv FC gfortran
setenv GCC_HOME $root
setenv HPC_GCC_ACTIVE 1
